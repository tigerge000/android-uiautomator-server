<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.uiautomator.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="1dp"
        android:text="ATX-Agent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/btn_finish"
        android:text="Quit" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/btn_identify"
        android:text="Identify" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="快捷方式" />

    <Button
        android:id="@+id/development_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开发者选项" />

    <Button
        android:id="@+id/accessibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="无障碍" />

    <Button
        android:id="@+id/stop_uiautomator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止UIAutomator" />

    <Button
        android:id="@+id/start_uiautomator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动UIAutomator" />

    <Button
        android:id="@+id/stop_atx_agent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止ATXAgent" />


    <TextView
        android:id="@+id/ip_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="IP: " />

    <TextView
        android:id="@+id/atx_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="ATX端口: " />
    <TextView
        android:id="@+id/ui_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="UiAutomator端口: " />

    <TextView
        android:id="@+id/shell_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="Shell端口: " />
</LinearLayout>
